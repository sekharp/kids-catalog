<h1>Edit Profile</h1>

<%= form_for(@user, :url => {:action => "update", :id => @user.id}) do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.submit "Update Profile" %>
<% end %>
