<div class="text-center">
  <h1>Book Search</h1>
  <form class="navbar-form" role="search">
    <div class="form-group">
      <input type="text" class="form-control" id="filter" placeholder="Search">
      <button type="submit" class="btn btn-default">Submit</button><br>
      <b>Search by Title</b>
    </div>
  </form>
</div><br><br>

<div class="all-books">
  <% cache(action: "all", action_suffix: "open_library", expires_in: 30.days) do %>
    <% @all_books.each do |book| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail card-border" style="padding:20px">
          <a href="<%= book_path(book.id) %>">
            <img class="book-cover" src="<%= book.cover_url(book.isbn) %>" alt="" /><br>
          </a>
          <div class="caption">
            <h3><a href="<%= book_path(book.id) %>"><%= book.title %></a></h3>
            <b><h4>By <%= book.author_first_name %> <%= book.author_last_name %></h4></b>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div><br>