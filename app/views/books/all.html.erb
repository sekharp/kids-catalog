<div class="col-md-offset-5">
  <h1>Book Search</h1>
  <form class="navbar-form navbar-left" role="search">
    <div class="form-group">
      <input type="text" class="form-control" id="filter" placeholder="Search">
    </div>
    <button type="submit" class="btn btn-default">Submit</button><br>
    <b>Search by Title</b>
  </form><br><br>
</div><br><br>

<div class="all-books">
  <% cache(action: "all", action_suffix: "open_library", expires_in: 30.days) do %>
    <% @all_books.each do |book| %>
      <div class="row col-md-offset-1">
        <div class="col-md-3">
          <a href="<%= book_path(book.id) %>">
            <img class="all-books-cover" src="<%= book.cover_url(book.isbn) %>" alt="" /><br>
            <div class="book-title">
              <a href="<%= book_path(book.id) %>"><%= book.title %></a>
            </div>
          </a>
        </div>
      </div>
    <% end %>
  <% end %>
</div><br>
