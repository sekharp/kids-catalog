<div style="padding:20px">
  <div class="row" >
    <h2 align="left" style="padding-left:20px">Recent Books</h1>
      <% @recent_books.each do |book| %>
        <% cache(book, expires_in: 30.days) do %>
          <div class="col-sm-6 col-md-3">
            <div class="thumbnail card-border" style="padding:20px">
              <a href="<%= book_path(book.id) %>">
                <img class="book-cover" src="<%= book.cover_url(book.isbn) %>" alt="" /><br>
              </a>
              <div class="caption">
                <h3><a href="<%= book_path(book.id) %>"><%= book.title %></a></h3>
                <b><h4>By <%= book.author_first_name %> <%= book.author_last_name %></h4></b><br>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
  </div>

  <% cache(action: "index", action_suffix: "teacher_books") do %>
    <div class="row">
      <h2 align="left" style="padding-left:20px">Teacher's Choice Books</h2>
        <% @teacher_books.each do |book| %>
          <% cache(book, expires_in: 30.days) do %>
            <div class="col-sm-6 col-md-3">
              <div class="thumbnail card-border" style="padding:20px">
                <a href="<%= book_path(book.id) %>">
                  <img class="book-cover" src="<%= book.cover_url(book.isbn) %>" alt="" /><br>
                </a>
                <div class="caption">
                  <h3><a href="<%= book_path(book.id) %>"><%= book.title %></a></h3>
                  <b><h4>By <%= book.author_first_name %> <%= book.author_last_name %></h4></b>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
    </div>
  <% end %>
</div>